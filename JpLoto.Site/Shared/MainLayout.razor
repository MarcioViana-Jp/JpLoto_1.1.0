@inherits LayoutComponentBase
@inject NavigationManager navigationManager

<div class="page @navbarClassShow @navbarClass bg-gray-200">
    <style>
        span.jploto_version {
            position: relative;
            left: -1px;
            bottom: -4px;
        }
    </style>
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 bg-gradient-dark" id="sidenav-main">
        <div class="sidenav-header">
            <div class=" d-flex align-items-center align-content-between">
                <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
                <a class="navbar-brand m-0" href=""> @* target="_blank" *@
                    @* <img src="assets/img/logo-ct.png" class="navbar-brand-img h-50" alt="main_logo"> *@
                    <img src="site_images/logos/logo_30x5_transparente.png" style="width: 100px;" class="navbar-brand-img" alt="main_logo">
                    <span class="font-weight-bold text-white jploto_version p-1">1.1</span>
                </a>
                <ul class="navbar-nav justify-content-end" style="display: @styleTogglerIcon;">
                    <li class="nav-item d-xl-none ps-3 d-flex align-items-center" @onclick="NavbarTogglerHandler">
                            <a href="javascript:;" class="nav-link text-body text-white p-0" id="iconNavbarSidenav">
                            <div class="sidenav-toggler-inner">
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                                <i class="sidenav-toggler-line"></i>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <NavMenu />
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
            <div class="container-fluid py-1 px-3">
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <h6 class="navbar-nav justify-content-start font-weight-bolder mb-0" hidden><span>JP Loto 1.1</span></h6>
                    <ul class="navbar-nav justify-content-end">                        
                        <li class="nav-item d-xl-none ps-3 d-flex align-items-center" @onclick="NavbarTogglerHandler">
                             <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item px-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0">
                                <i class="fa fa-cog fixed-plugin-button-nav cursor-pointer"></i>
                            </a>
                        </li>
                        <CultureSelector />
                        <AuthorizeView>
                            <Authorized>
                                <li class="nav-item d-flex align-items-center">
                                    <a href="/logout" class="nav-link text-body font-weight-bold px-0">
                                        <i class="fa fa-sign-out me-sm-1"></i>
                                        <span class="d-sm-inline d-none">Sign Out</span>
                                    </a>
                                </li>
                            </Authorized>
                            <NotAuthorized>
                                <li class="nav-item d-flex align-items-center">
                                    <a href="/login" class="nav-link text-body font-weight-bold px-0">
                                        <i class="fa fa-user me-sm-1"></i>
                                        <span class="d-sm-inline d-none">Sign In</span>
                                    </a>
                                </li>
                            </NotAuthorized>
                        </AuthorizeView>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
      
        <article class="content px-4">
            @Body
        </article>

        <Footer />

    </main>

</div>

@code {
    private bool isNavbarExpanded = true;
    private string? navbarClassShow => isNavbarExpanded ? "g-sidenav-show" : null;
    private string? navbarClass => isNavbarExpanded ? null : "g-sidenav-pinned";
    private string? styleTogglerIcon => isNavbarExpanded ? "none" : "block";

    private string returnUrl = string.Empty;

    protected override void OnInitialized()
    {
        var uri = navigationManager.ToAbsoluteUri(navigationManager.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("returnUrl", out var url))
        {
            returnUrl = url;
        }
    }

    private void NavbarTogglerHandler()
    {
        isNavbarExpanded = !isNavbarExpanded;
    }
}
